                                        InetAddress group;
                                        group = InetAddress.getByName("224.0.0.1");
                                         int port = 1234;
    
                                        MulticastChat chat = new MulticastChat (group, port);
                                        chat.start ();
                                        
					Video_Conference frame = new Video_Conference(toString(), toString());
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}
